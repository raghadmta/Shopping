@{
    var product = (List<ProductModel>)ViewData["products"];
}

<table class=table>
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pro in product)
        {
            <tr>
                <th scope="row">@pro.Name</th>
                <td> @pro.Description</td>
                <td>@pro.Price</td>
            </tr>
        }

    </tbody>

</table>
<button type="button" onclick="location.href='@Url.Action("additem","products")'"> Add Item </button>